{
  "compilerOptions": {
    "module": "system",
    "moduleResolution": "node",
    "outFile": "./build/index.js",
    "target": "ES6",
    "sourceMap": false,
    "allowJs": true,
    "lib": ["es2017", "dom"],
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "node_modules/@types", "src/global.d.ts"],
  "exclude": [".git", "node_modules"]
}
