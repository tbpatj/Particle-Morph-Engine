    "target": "ES6",
    "module": "ES6",
    "outDir": "./lib-ts",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true, // Generate .d.ts declaration files
    "sourceMap": true, // Generate source maps
